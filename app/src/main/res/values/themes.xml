<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GalleryAxAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="Theme.GalleryAx.SplashScreen" parent="Theme.GalleryAxAdmin">
        <item name="android:background">@drawable/splash_screen_background</item>
    </style>

    <!-- Main activity theme. -->
    <style name="Theme.GalleryAx.MainActivity" parent="Theme.GalleryAxAdmin">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Buttons theme. -->
    <style name="Theme.GalleryAx.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/vazir_fd_medium</item>
    </style>

    <style name="Theme.GalleryAx.DeleteButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">#B3FF3E3E</item>
        <item name="iconTint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/vazir_fd_medium</item>
    </style>

    <style name="Theme.GalleryAx.GhostButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/vazir_fd_medium</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>